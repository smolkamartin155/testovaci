<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class='links'>
    <%= link_to_add_association 'Add variant', f, :variants,:"data-association-insertion-method" => "append", class: 'btn btn-primary btn-success' %>
  </div>
  <div>
    <%= f.fields_for :variants do |f| %>
      <%= render(:partial => "variant_fields", locals: {f: f}) %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
