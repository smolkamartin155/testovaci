<div id="document_show">
  <p id="notice"><%= notice %></p>
<h1>Document</h1>
  <p>
    <strong>Name:</strong>
    <%= @document.name %>
  </p>
  <div>
    <strong>Variants:</strong>
    <% @document.items.eager_load(:variant).each do |item| %>
      <div id="item_<%= item.id %>">
        <br>
        <strong>Name:</strong>
        <%= link_to item.variant_name, product_path(item.variant_product_id,flash_variant: item.variant_id) ,remote:true%>
        <%= link_to 'Destroy', document_item_path(id: item.id, document_id: item.document_id), method: :delete, data: { confirm: 'Are you sure?' },remote: true %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Back', documents_path %>
</div>
